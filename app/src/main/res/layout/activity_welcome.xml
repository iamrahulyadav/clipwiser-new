<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              style="@style/layout_normal"
              android:id="@+id/activity_welcome"
              android:weightSum="4"
              android:padding="@dimen/dimen_0dp"
    >

    <RelativeLayout
        android:id="@+id/relativeSlider"
        style="@style/layout_normal"
        android:layout_weight="2.3"
        android:layout_height="@dimen/dimen_0dp"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpagerImageSlidingWelcome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.clipwiser.views.TextViewRegular
            android:id="@+id/textViewSkipWelcome"
            style="@style/textStyle_normal"
            android:text="@string/skip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/dimen_5dp"
            />

        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color_8a000000"
        android:alpha="0.3"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        >
    <include
        layout="@layout/include_loginsigup"/>
    </RelativeLayout>

</LinearLayout>