<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/layout_normal"
              android:orientation="vertical"
              android:layout_height="wrap_content"
              android:layout_gravity="top"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dimen_16dp">

        <com.clipwiser.views.TextViewRegular
            android:id="@+id/textViewTitleBottomSheetForgotPwd"
            style="@style/textStyle_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.54"
            android:text="@string/forgot_pwd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitleBottomSheetForgotPwd"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:orientation="horizontal"
            android:baselineAligned="false">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinputlayoutForgotPwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="@dimen/dimen_18dp"
                android:layout_marginRight="@dimen/dimen_18dp"
                android:layout_weight="1">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edittextEmailForgotPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"

                    />
            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_45dp"
                android:layout_gravity="center_vertical">

                <com.clipwiser.views.SpCompatButton
                    android:id="@+id/buttonResetForgotPwd"
                    style="@style/Button_style_norml"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="@dimen/dimen_38dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/reset"
                    android:textSize="@dimen/dimen_14sp"
                    android:textAllCaps="false"
                    android:layout_centerInParent="true"
                    />

                <ProgressBar
                    android:id="@+id/progressBarForgotPwd"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>